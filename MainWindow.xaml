<Window x:Class="RandomFilesTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RandomFilesTest"
        mc:Ignorable="d"
        Title="Random Files" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="Enter a path to search" FontSize="15px"/>
            <TextBox/>
            <Label Content="How many random files do you want?"/>
            <ComboBox FontSize="15px">
                <ComboBoxItem>One random file</ComboBoxItem>
                <ComboBoxItem>Two random files</ComboBoxItem>
                <ComboBoxItem>Three random files</ComboBoxItem>
                <ComboBoxItem>List all files randomly</ComboBoxItem>
            </ComboBox>
            <Label Content="Random File List:" FontSize="15px"/>
            <ListView FontSize="15px"/>
            <Button FontSize="15px">Get Random Files</Button>
        </StackPanel>
    </Grid>
</Window>
